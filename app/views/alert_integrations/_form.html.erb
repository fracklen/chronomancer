<%= simple_form_for(@alert_integration) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :team, collection: @teams.map {|team| [team.name, team.id] }, include_blank: false  %>
    <%= f.input :kind, collection: AlertIntegration::KINDS.map {|a| [a,a] }, include_blank: false %>
    <%= f.input :data %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-info' %>
  </div>
<% end %>
