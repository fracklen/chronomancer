<p id="notice"><%= notice %></p>

<h1>Canaries</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Schedule</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @canaries.each do |canary| %>
      <tr class="<%= 'overdue' if canary.overdue? %>">
        <td><%= canary.name %></td>
        <td><%= canary.schedule %></td>
        <td><%= canary.team.name %></td>
        <td><%= link_to 'Show', canary, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_canary_path(canary), class: 'btn btn-success' %></td>
        <td><%= link_to 'Destroy', canary, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Canary', new_canary_path, class: 'btn btn-info' %>
